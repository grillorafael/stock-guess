.container
    .row
        .col-lg-4.col-lg-offset-4.text-center
            h1
                | Your rank is \#{{myRank}}
                br
                .fb-share-button(data-href='http://stocks.rgrillo.com', data-layout='button')
            hr
            table.table
                thead
                    tr
                        td(class='col-lg-1')
                            | Position
                        td Username
                        td(class='col-lg-1')
                            | Score (pts)
                tbody
                    tr(ng-repeat='user in rank')
                        td \#{{$index + 1}}
                        td {{user.username || "anonymous"}}
                        td {{user.score}}
